<sxs>
    <scene root="demoRoot" axis_length="5" />

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="leaves" file="scenes/images/leaves.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
        <primitive id="demoCylinder">
            <cylinder base="0.5" top="0.5" height="3" slices="50" stacks="12" />
        </primitive>
        <primitive id="basketCylinder">
            <cylinder base="1" top="1.5" height="2.4" slices="50" stacks="12" />
        </primitive>
        <primitive id="demoTriangle">
            <triangle x1="0" y1="0" z1="0" x2="4" y2="0" z2="0" x3="0" y3="3" z3="0" />
        </primitive>
        <primitive id="demoSphere">
            <sphere radius="1" slices="112" stacks="112" />
        </primitive>
        <primitive id="demoTorus">
            <torus inner="0.25" outer="4" slices="110" loops="111" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" />
            <children>
                <componentref id="table" />
                <componentref id="floor" />
                <componentref id="basket" />

            </children>
        </component>

        <component id="tableLeg1">
            <transformation>
                <translate x="0" y="4" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" />
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="tableLeg2">
            <transformation>
                <translate x="3" y="4" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" />
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="tableLeg3">
            <transformation>
                <translate x="3" y="0" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" />
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="tableLeg4">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" />
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="tableTop">
            <transformation>
                <translate x="1.5" y="2" z="0" />
                <scale x="4.5" y="3.5" z="3.5" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>
        <component id="tableBottom">
            <transformation>
                <translate x="1.5" y="2" z="0" />
                <scale x="4.5" y="3.5" z="3.5" />
                <rotate axis="x" angle="180" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="table">
            <transformation>
                <translate x="2" y="0" z="0" />
                <scale x="1" y="1" z="1" />
                <rotate axis="x" angle="90" />
                <translate x="2" y="7" z="-3" />

            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" />
            <children>
                <componentref id="tableLeg1" />
                <componentref id="tableLeg2" />
                <componentref id="tableLeg3" />
                <componentref id="tableLeg4" />
                <componentref id="tableBottom" />
                <componentref id="tableTop" />
            </children>
        </component>

        <component id="floor">
            <transformation>
                <rotate axis="x" angle="270" />
                <scale x="10" y="10" z="10" />

                <translate x="0.5" y="-0.9" z="0" />

            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>


        <component id="basketWall">
            <transformation>
                <rotate axis="x" angle="270" />
                <translate x="5.5" y="-1" z="0" />
                <scale x = "0.5" y="0.5" z="0.5" />

            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" />
            <children>
                <primitiveref id="basketCylinder" />
            </children>
        </component>
        <component id="basketTop">
            <transformation>
                <rotate axis="x" angle="270" />
                <translate x="5.5" y="-1" z="1.2" />
                <scale x = "0.2" y="0.2" z="0.2" />

            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" />
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>
        <component id="basket">
            <transformation></transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" />
            <children>
                <componentref id="basketWall" />
                <componentref id="basketTop" />
            </children>
        </component>
    </components>
</sxs>