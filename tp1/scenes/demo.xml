<sxs>
    <scene root="demoRoot" axis_length="5" />

    <views default="Camera 1">
        <perspective id="Camera 1" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <perspective id="Camera 2" near="0.1" far="500" angle="45">
            <from x="15" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <perspective id="Camera 3" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="15" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="orthoCamera" near="0.01" far="500" left="-5" right="5" top="-5" bottom="5">

            <from x="20" y="10" z="30" />

            <to x="10" y="-2" z="0" />

            <up x="0" y="4" z="0" /> <!-- opcional, default 0,1,0 -->

        </ortho>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="glass" file="scenes/images/vidral.jpg" />
        <texture id="leaves" file="scenes/images/leaves.jpg" />
        <texture id="bank" file="scenes/images/bank.jpg" />
        <texture id="floor_text" file="scenes/images/floor.png" />
        <texture id="trash" file="scenes/images/trash.jpg" />
        <texture id="wood" file="scenes/images/trunk-image.jpg" />

    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.4" g="0.4" b="0.4" a="1.0" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1.0" />
            <specular r="0.4" g="0.4" b="0.4" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
        <primitive id="demoCylinder">
            <cylinder base="0.5" top="0.5" height="3" slices="50" stacks="12" />
        </primitive>
        <primitive id="basketCylinder">
            <cylinder base="1" top="1.5" height="2.4" slices="50" stacks="12" />
        </primitive>
        <primitive id="demoTriangle">
            <triangle x1="0" y1="0" z1="0" x2="4" y2="0" z2="0" x3="0" y3="3" z3="0" />
        </primitive>
        <primitive id="demoSphere">
            <sphere radius="1" slices="112" stacks="112" />
        </primitive>
        <primitive id="demoTorus">
            <torus inner="0.25" outer="4" slices="110" loops="111" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation></transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="glass" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="table" />
                <componentref id="floor" />
                <componentref id="basket" />
                <componentref id="walls" />

            </children>
        </component>

        <component id="tableLeg1">
            <transformation>
                <translate x="0" y="4" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="wood" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="tableLeg2">
            <transformation>
                <translate x="3" y="4" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="wood" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="tableLeg3">
            <transformation>
                <translate x="3" y="0" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="wood" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="tableLeg4">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="wood" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="tableBottom">
            <transformation>
                <translate x="1.5" y="2" z="0" />
                <scale x="4.5" y="3.5" z="3.5" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="leaves" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="tableTop">
            <transformation>
                <translate x="1.5" y="2" z="0" />
                <scale x="4.5" y="3.5" z="3.5" />
                <rotate axis="x" angle="180" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="leaves" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="table">
            <transformation>
                <translate x="2" y="0" z="0" />
                <scale x="1" y="1" z="1" />
                <rotate axis="x" angle="90" />
                <translate x="2" y="7" z="-3" />

            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="glass" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="tableLeg1" />
                <componentref id="tableLeg2" />
                <componentref id="tableLeg3" />
                <componentref id="tableLeg4" />
                <componentref id="tableBottom" />
                <componentref id="tableTop" />
            </children>
        </component>

        <component id="floor">
            <transformation>
                <rotate axis="x" angle="270" />
                <scale x="20" y="10" z="1" />
                <translate x="0.5" y="-1" z="0" />

            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="floor_text" length_s="2" length_t="2" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>


        <component id="basketWall">
            <transformation>
                <rotate axis="x" angle="270" />
                <translate x="5.5" y="-1" z="0" />
                <scale x="0.5" y="0.5" z="0.5" />

            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="trash" length_s="0.01" length_t="0.01" />
            <children>
                <primitiveref id="basketCylinder" />
            </children>
        </component>
        <component id="basketTop">
            <transformation>
                <rotate axis="x" angle="270" />
                <translate x="5.5" y="-1" z="1.2" />
                <scale x="0.2" y="0.2" z="0.2" />

            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="trash" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>
        <component id="basket">
            <transformation></transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="glass" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="basketWall" />
                <componentref id="basketTop" />
            </children>
        </component>

        <component id="wall1">
            <transformation>
                <scale x="20" y="4" z="1" />
                <translate x="0.5" y="1" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="wall2">
            <transformation>
                <rotate axis="y" angle="90" />
                <rotate axis="z" angle="90" />
                <scale x="8" y="10" z="1" />
                <translate x="0.5" y="1" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>


        <component id="wall3">
            <transformation>
                <rotate axis="z" angle="180" />
                <rotate axis="y" angle="90" />
                <rotate axis="z" angle="90" />
                <scale x="8" y="10" z="1" />
                <translate x="-0.5" y="1" z="-20" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="wall4">
            <transformation>
                <rotate axis="y" angle="180" />
                <scale x="20" y="4" z="1" />
                <translate x="-0.5" y="1" z="-20" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="walls">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="bank" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="wall1" />
                <componentref id="wall2" />
                <componentref id="wall3" />
                <componentref id="wall4" />
            </children>
        </component>
    </components>
</sxs>